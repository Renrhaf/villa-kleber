{% set language = app.request.locale|split('_')[0] %}
<!DOCTYPE html>
<html {% block html_attributes %}lang="{{ language }}"{% endblock %}>
    <head>
        {% block meta_tags %}
            <meta charset="UTF-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge" />
            <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
            <meta name="keywords" content="{{ 'metatags.keywords'|trans }}" />
            <meta name="description" content="{{ 'metatags.description'|trans }}" />
        {% endblock %}

        <title>{% block title %}{{ 'metatags.title'|trans }}{% endblock %}</title>

        {% block all_stylesheets %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('libs/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css') }}">
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('libs/flag-icon/css/flag-icon.min.css') }}">
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('libs/font-awesome/css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('libs/royalslider/royalslider.css') }}" />
            <link rel="stylesheet" href="{{ asset('libs/royalslider/skins/default/rs-default.css') }}" />
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/main.css') }}" />
            {% block stylesheets %}{% endblock %}
        {% endblock %}

        <link href='https://fonts.googleapis.com/css?family=News+Cycle:400,700|Advent+Pro:100,200,300,400,600,500,700' rel='stylesheet' type='text/css'>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-72323960-1', 'auto');
            ga('send', 'pageview');
        </script>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body id="{{ app.request.attributes.get('_route') }}">
        {% block body %}
            {% block header %}
                <header id="page-header">
                    <div class="container clearfix">
                        {% block logo %}
                            <h1 id="logo">
                                <a href="{{ path('homepage') }}">
                                    Villa <span class="secondary-color">Kleber</span>
                                </a>
                            </h1>
                        {% endblock %}

                        <div id="menu-responsive">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>

                        <nav id="main-menu">
                            {% block menu %}
                                <ul class="nav clearfix">
                                    <li><a href="#presentation">{{ 'menu.presentation'|trans }}</a></li>
                                    <li><a href="#rooms">{{ 'menu.rooms'|trans }}</a></li>
                                    <li><a href="#book">{{ 'menu.reservation'|trans }}</a></li>
                                    <li><a href="#information">{{ 'menu.information'|trans }}</a></li>
                                    <li><a href="#contact">{{ 'menu.contact'|trans }}</a></li>

                                    {{ include('partials/language_switcher.html.twig') }}
                                </ul>
                            {% endblock %}
                        </nav>
                    </div>
                </header>
            {% endblock %}

            {{ include('partials/messages.html.twig') }}

            {% block content %}{% endblock %}

            {% block footer %}
                <section id="page-footer" class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>
                                Villa <span class="second-color">Kleber</span>
                            </h2>

                            <p>
                                {{ 'copyright.authors'|trans }}<br />
                                Copyright {{ 'now'|date('Y') }}. {{ 'copyright.reserved'|trans }}
                            </p>

                            <div class="social">
                                <a class="google" href="https://plus.google.com"><i class="fa fa-google-plus"></i></a>
                                <a class="twitter" href="https://twitter.com/"><i class="fa fa-twitter"></i></a>
                                <a class="facebook" href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
                            </div>
                        </div>
                    </div>
                </section>

                <div id="back-to-top"></div>
            {% endblock %}
        {% endblock %}

        {% block all_javascripts %}
            <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
            <script src="{{ url('bazinga_jstranslation_js') }}"></script>
            <script src='https://maps.googleapis.com/maps/api/js?v=3.exp'></script>
            <script type="text/javascript" src="{{ asset('libs/jquery/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libs/bootstrap/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libs/bootstrap-datepicker/locales/bootstrap-datepicker.fr.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libs/royalslider/jquery.royalslider.min.js') }}"></script>
            <script type="text/javascript">
                var symfony = {
                    language: "{{ language }}"
                };
            </script>
            <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
            {% block javascripts %}{% endblock %}
        {% endblock %}
    </body>
</html>